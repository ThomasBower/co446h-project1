{
  "manifest_version": 2,

  "name": "Web Audit",
  "description": "Identifies common vulnerabilities in websites as you browse the web.",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Open the popup"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "permissions": [
    "storage"
  ]
}